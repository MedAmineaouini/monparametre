{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="card card-h-10 mt-1">
        <div class="card-body table-responsive">
            <div class="row d-flex flex-column flex-md-row justify-content-between align-items-center mb-3">

                <div class="col-md-8">
                    <h4 class="page-title">Détails produit ( {{ produit.CODEPROD }} : {{ produit.LIBPROD }} )</h4>
                </div>
            </div>

            <ul class="nav nav-pills bg-nav-pills nav-justified mb-3">
                <li class="nav-item">
                    <a href="#detailproduit" data-bs-toggle="tab" aria-expanded="false" class="nav-link rounded-0 active">
                        <i class="mdi mdi-home-variant d-md-none d-block"></i>
                        <span class="d-none d-md-block">Produit</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#profile1" data-bs-toggle="tab" aria-expanded="true" class="nav-link rounded-0">
                        <i class="mdi mdi-account-circle d-md-none d-block"></i>
                        <span class="d-none d-md-block">Stock</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#settings1" data-bs-toggle="tab" aria-expanded="false" class="nav-link rounded-0">
                        <i class="mdi mdi-account-cash d-md-none d-block"></i>
                        <span class="d-none d-md-block">Tarification</span>
                    </a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane show active " id="detailproduit">
                    <form>
                        <div class="row mb-3">
                            <div class="col-12 col-md-4">
                                <label for="seqprod" class="form-label">SEQPROD</label>
                                <input type="text" class="form-control" id="seqprod" value="{{ produit.SEQPROD }}" readonly>
                            </div>
                            <div class="col-12 col-md-4">
                                <label for="codeprod" class="form-label">CODEPROD</label>
                                <input type="text" class="form-control" id="codeprod" value="{{ produit.CODEPROD }}"
                                       readonly>
                            </div>
                            <div class="col-12 col-md-4">
                                <label for="libprod" class="form-label">LIBPROD</label>
                                <input type="text" class="form-control" id="libprod" value="{{ produit.LIBPROD }}" readonly>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12 col-md-4">
                                <label for="adresse" class="form-label">ADRESSE</label>
                                <input type="text" class="form-control" id="adresse" value="{{ produit.ADRESSE }}" readonly>
                            </div>
                            <div class="col-12 col-md-4">
                                <label for="tel" class="form-label">TEL</label>
                                <input type="text" class="form-control" id="tel" value="{{ produit.TEL }}" readonly>
                            </div>
                            <div class="col-12 col-md-4">
                                <label for="email" class="form-label">EMAIL</label>
                                <input type="email" class="form-control" id="email" value="{{ produit.EMAIL }}" readonly>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12 col-md-4">
                                <label for="pays" class="form-label">Pays</label>
                                <input type="text" class="form-control" id="pays" value="{{ produit.IDPAYS.libpays }}"
                                       readonly>
                            </div>
                            <div class="col-12 col-md-4">
                                <label for="sous" class="form-label">Sous pays</label>
                                <input type="text" class="form-control" id="sous"
                                       value="{{ (produit.SEQSOUSPAYS) ? produit.SEQSOUSPAYS.libsouspays : '' }}" readonly> <!-- Mettre à jour ici -->
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab-pane" id="profile1">
                    <p>...</p>
                </div>
                <div class="tab-pane" id="settings1">
                    <p>...</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="d-flex justify-content-end mt-2 mt-md-0">
                        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary ms-2">
                            <i class="uil uil-arrow-left"></i> Retour
                        </a>
                        <a href="{{ path('app_produit_edit', {'SEQPROD': produit.SEQPROD}) }}" class="btn btn-primary ms-2">
                            <i class="uil uil-pen"></i> Modifier
                        </a>
                        <form method="post" action="{{ path('app_produit_delete', {'SEQPROD': produit.SEQPROD}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');" class="mb-0 ms-2">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.SEQPROD) }}">
                            <button class="btn btn-danger" type="submit">
                                <i class="uil uil-trash-alt"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>


        </div>

    </div>
{% endblock %}
