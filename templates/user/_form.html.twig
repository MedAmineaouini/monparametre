{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

<div class="mb-3">
    {{ form_label(form.login, null, {'attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.login) }}
</div>

<div class="mb-3">
    {{ form_label(form.password, null, {'attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.password) }}
</div>

<div class="mb-3">
    <label class="form-label">{{ form_label(form.roles, null, {'attr': {'class': 'form-label'}}) }}</label>

    {% for role in form.roles %}
        <div class="form-check">
            {{ form_widget(role, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_errors(role) }}
            <label class="form-check-label" for="{{ role.vars.id }}">
                {{ role.vars.label }}
            </label>
        </div>
    {% endfor %}

</div>


<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
