{% extends 'base.html.twig' %}

{% block title %}Royal first travel : Listes utilisateur{% endblock %}

{% block body %}
    <br>
    <div class="card card-h-100">
        <div class="card-body table-responsive">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Listes utilisateurs</h3>
                <div class="dropdown">
                    <a class="btn btn-primary" href="{{ path('app_register') }}">Ajouter utilisateur</a>
                </div>
            </div>
            <table class="table table-bordered table-striped" id="basic-datatable">
                <thead>
                <th>Id</th>
                <th>Login</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.login }}</td>
                        <td>
                            {% for role in user.roles %}
                                {% if role == 'ROLE_ADMIN' %}
                                    Administrateur
                                {% else %}
                                    Utilisateur
                                {% endif %}
                                <br>{% endfor %}
                        </td>
                        <td>{{ user.password }}</td>
                        <td>
                            <div class="row">
                                <div class="col-md-4" style="text-align: center">
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}"><i class="uil uil-eye"
                                                                                              style="font-size: 25px;"></i></a>
                                </div>
                                <div class="col-md-4" style="text-align: center;">
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"><i
                                                style="color: #0acf97;font-size: 25px;" class="uil uil-pen"></i></a>

                                </div>
                                <div class="col-md-4" style="text-align: center;">
                                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}"
                                          onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button class="btn"><i class="uil uil-trash-alt"
                                                               style="font-size: 25px;color: red"></i></button>
                                    </form>
                                </div>

                            </div>


                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
