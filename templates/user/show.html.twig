{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="card card-h-100 mt-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center ">
                <h3>Details utilisateur</h3>
            </div>
            <div class="row mt-1">
                <div class="col-md-1 mb-3">
                    <label for="userId" class="form-label">Id</label>
                    <input type="text" id="userId" class="form-control" value="{{ user.id }}" readonly>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="userLogin" class="form-label">Login</label>
                    <input type="text" id="userLogin" class="form-control" name="login" value="{{ user.login }}">
                </div>
                <div class="col-md-4  mb-3">
                    <label for="userRoles" class="form-label">Roles</label>
                    <input type="text" id="userRoles" class="form-control" name="roles"
                           value="{{ user.roles ? user.roles|json_encode : 'None' }}">
                </div>
                <div class=" col-md-3 mb-3">
                    <label for="userPassword" class="form-label">Password</label>
                    <input type="password" id="userPassword" class="form-control" name="password"
                           value="{{ user.password }}"> {# Considérer de ne pas afficher le mot de passe en clair pour des raisons de sécurité #}
                </div>
            </div>
            <div class="row mt-1" style="text-align: center">
                <div class=" col-md-12 mt-4">
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
